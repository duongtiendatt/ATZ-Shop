@using ClothesShop.BU.Common;

@{
    var active = "active";
    var tatCa = (int)EnumCommon.Product.TatCa;
}

<div class="header-btm">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <div class="header-logo">
                        <a href="index.html#"><img src="/Assets/client/image/logo.png" alt="logo"></a>
                    </div>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                            <li class="nav-item @if ((int)Session["menu"] == (int)EnumCommon.Menu.TrangChu) {
                                @active
                            } ">
                                <a class="nav-link" href="/Home">Trang chủ</a>
                            </li>
                            <li class="nav-item @if ((int)Session["menu"] == (int)EnumCommon.Menu.GioiThieu) {
                                @active
                            } ">
                                <a class="nav-link" href="/AboutUs">Giới thiệu</a>
                            </li>
                            <li class="nav-item @if ((int)Session["menu"] == (int)EnumCommon.Menu.SanPham) {
                                @active
                            } ">
                                <a class="nav-link" href="/Product?product=@tatCa">Sản phẩm</a>
                            </li>
                            <li class="nav-item @if((int)Session["menu"] == (int)EnumCommon.Menu.LienHe){
                                @active
                            } ">
                                <a class="nav-link" href="/Contact">Liên hệ</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>
