
@{
    ViewBag.Title = "Liên hệ";
}


<!-- Start Breadcrumbs Section -->
<section class="breadcrumbs-section background_bg" data-img-src="/Assets/client/image/aboutus-breadcrumbs-img.jpg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="page_title text-center">
                    <h1>Liên hệ</h1>
                    <ul class="breadcrumb justify-content-center">
                        <li><span>Hãy đến với chúng tôi để được hưởng những gì tốt đẹp nhất</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Header Section -->
<!-- Start Contact Detail Section -->
<section class="contact-inner-page pt_large">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12">
                <div class="contact-inputs">
                    <div class="title text-left">
                        <h4>Để lại lời nhắn</h4>
                    </div>
                    <form method="post" name="enq" class="contact-form form-with-label">
                        <div class="input-1">
                            <label>Họ và tên<span>*</span></label>
                            <input required="" class="form-control" id="first-name" placeholder="Họ và tên" value="" type="text">
                        </div>
                        <div class="input-2">
                            <label>Email<span>*</span></label>
                            <input required="" class="form-control" id="email" placeholder="Email" value="" type="email">
                        </div>
                        <div class="input-5">
                            <label>Nội dung<span>*</span></label>
                            <textarea required="" rows="3" class="form-control" id="description" placeholder="Nội dung"></textarea>
                        </div>
                        <div class="submit-btn">
                            <button type="submit" id="submitButton" class="btn btn-primary">Gửi lời nhắn</button>
                        </div>
                        <div class="col-md-12">
                            <div id="alert-msg" class="alert-msg text-center"></div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-4 col-md-12">
                <div class="contact-details">
                    <div class="title text-left">
                        <h4>Hãy giữ liên lạc nhé!</h4>
                    </div>
                    <div class="contact-inner">
                        <p>Hãy liên lạc với chúng tôi mọi lúc mọi nơi, bạn sẽ được chăm sóc nhiệt tình nhất! Cảm ơn quý khách hàng đã ghé thăm!</p>
                        <ul class="contact-locations">
                            <li><span class="fa fa-map-marker"></span><p>Phố Nhổn - Minh Khai - Bắc Từ Liêm - Hà Nội</p></li>
                            <li><span class="fa fa-phone"></span><p>+025 2155 3255</p></li>
                            <li><span class="fa fa-envelope-o"></span><a href="contact.html#">info@gmail.com</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Contact Detail Section -->

<!-- Start Map Section -->
<section class="pb-0">
    <div class="container-fluid p-0">
        <div class="row no-gutters">
            <div class="col-md-12">
                <div class="map" id="map"></div>
            </div>
        </div>
    </div>
</section>
<!-- End Map Section -->
