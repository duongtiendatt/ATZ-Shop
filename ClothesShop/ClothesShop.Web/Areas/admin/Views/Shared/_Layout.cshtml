<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link type="text/css" href="/Assets/admin/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link type="text/css" href="/Assets/admin/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet">
    <link type="text/css" href="/Assets/admin/css/theme.css" rel="stylesheet">
    <link type="text/css" href="/Assets/admin/images/icons/css/font-awesome.css" rel="stylesheet">
    <link type="text/css" href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600'
          rel='stylesheet'>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <i class="icon-reorder shaded"></i>
                </a><a class="brand" style="padding-left:50px;">Quản trị Clothes Shop </a>
                <div class="nav-collapse collapse navbar-inverse-collapse">
                    <ul class="nav pull-right">
                        <li class="nav-user dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="/Assets/admin/images/user.png" class="nav-avatar" />
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Your Profile</a></li>
                                <li><a href="#">Edit Profile</a></li>
                                <li><a href="#">Account Settings</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Đăng xuất</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <!-- /.nav-collapse -->
            </div>
        </div>
        <!-- /navbar-inner -->
    </div>

    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="span3">
                    @Html.Partial("_nav")
                    <!--/.sidebar-->
                </div>
                <!--/.span3-->

                <div class="span9">
                    <div class="content">

                        @RenderBody()

                    </div>
                </div>
                <!--/.span9-->
            </div>
        </div>
        <!--/.container-->
    </div>
    <!--/.wrapper-->
    <script src="/Assets/admin/scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="/Assets/admin/scripts/jquery-ui-1.10.1.custom.min.js" type="text/javascript"></script>
    <script src="/Assets/admin/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/Assets/admin/scripts/flot/jquery.flot.js" type="text/javascript"></script>
    <script src="/Assets/admin/scripts/flot/jquery.flot.resize.js" type="text/javascript"></script>
    <script src="/Assets/admin/scripts/datatables/jquery.dataTables.js" type="text/javascript"></script>
    <!-- Notify js -->
    <script src="/Assets/client/js/notify.js"></script>
    <script src="/Assets/admin/scripts/common.js" type="text/javascript"></script>
</body>
</html>